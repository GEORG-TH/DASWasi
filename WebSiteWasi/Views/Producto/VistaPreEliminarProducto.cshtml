@model WebSiteWasi.Models.ProductoDto
@{
    ViewData["Title"] = "VistaPreEliminarProducto";
}

<h1>PreEliminar Producto</h1>



<form method="post" asp-action="EliminarProducto">
    <input type="hidden" name="IdProducto" value="@ViewData["IdProducto"]" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">¿Está seguro de Eliminar esta producto?</h2>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label asp-for="NombreProducto" class="form-label">Nombre: </label>
                <input asp-for="NombreProducto" disabled class="form-control">
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <label asp-for="DescripcionProducto" class="form-label">Descripcion: </label>
                <input asp-for="DescripcionProducto" disabled class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label asp-for="PrecioProducto" class="form-label">Precio: </label>
                <input asp-for="PrecioProducto" disabled class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label asp-for="StockProducto" class="form-label">Stock: </label>
                <input asp-for="StockProducto" disabled class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">

                <label asp-for="IdCategoria" class="control-label"></label>
                <select asp-for="IdCategoria" class="form-control" asp-items="@(ViewData["Categorias"] as IEnumerable<SelectListItem>)" disabled></select>

            </div>
        </div>

        <div class="row">
            <div class="col-md-6">

                <img src="/ImagenesProductos/@ViewData["ImagenURLProducto"]" width="150" />

            </div>
        </div>

        <br />

        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-controller="Producto" asp-action="VistaListaProductos" class="btn btn-success">Regresar</a>
        </div>

    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
