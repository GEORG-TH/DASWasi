@model WebSiteWasi.Models.Categoria
@{
    ViewData["Title"] = "VistaModificarCategoria";
}

<h1>Modificar Categoria</h1>

<form method="post" asp-action="ModificarCategoria">
    <input asp-for="IdCategoria" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Modificar Categoria</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoría</label>
                    <input asp-for="NombreCategoria" class="form-control">
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Modificar</button>
                <a asp-controller="Categoria" asp-action="VistaListaProductos" class="btn btn-success">Regresar</a>
            </div>


        </div>

    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
