@model WebSiteWasi.Models.Categoria
@{
    ViewData["Title"] = "VistaPreEliminarCategoria";
}
 
<h1>PreEliminar Categoria</h1>



<form method="post" asp-action="EliminarCategoria">
    <input asp-for="IdCategoria" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">¿Está seguro de Eliminar esta categoría?</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoría</label>
                    <input asp-for="NombreCategoria" disabled class="form-control">

                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Eliminar</button>
                <a asp-controller="Categoria" asp-action="VistaListaCategorias" class="btn btn-success">Regresar</a>
            </div>


        </div>

    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
